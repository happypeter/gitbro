<h1>Editing <%=@page.name%></h1>
<form accept-charset="UTF-8" action="/posts/<%=@page.name%>/update" class="edit_post" id="edit_post_95" method="get">
	
	<div style="margin:0;padding:0;display:inline">
		<input name="utf8" type="hidden" value="&#x2713;" />
	</div>

    <div class="field">
      <label for="post_title">Page Name</label><br />
      <input id="post_title" name="post[title]" size="30" type="text" value="<%=@page.name%>" />
    </div>

    <div class="field">
      <label for="post_content">Content</label><br />
      <textarea cols="40" id="post_content" name="post[content]" rows="20"><%=@page.raw_data%></textarea>
    </div>
    
    <div class="actions">
      <input id="post_submit" name="commit" type="submit" value="Update Post" />
    </div>
</form>




